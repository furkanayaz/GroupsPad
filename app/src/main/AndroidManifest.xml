<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.furkanayaz.groupspad">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroupsPad">
        <activity android:name=".EditMyGroupsActivity" />
        <activity android:name=".SubCategoryGroupsActivity" />
        <activity android:name=".AboutGroupsPadActivity" />
        <activity android:name=".PrivacyPolicyActivity" />
        <activity android:name=".UserAgreementActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".EditProfileActivity" />
        <activity android:name=".FeedBackActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".NotificationsActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9250793100083769~1259217916"/>

    </application>

</manifest>